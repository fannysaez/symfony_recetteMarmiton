{% extends 'base_admin.html.twig' %}

{% block title %}Détail de l'utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Détail de l'utilisateur</h1>
    <table class="table table-bordered w-auto">
        <tr><th>ID</th><td>{{ user.id }}</td></tr>
        <tr><th>Email</th><td>{{ user.email }}</td></tr>
        <tr><th>Nom d'utilisateur</th><td>{{ user.username }}</td></tr>
    <tr><th>Rôles</th><td>{{ user.roles|join(', ') }}</td></tr>
    </table>
    <a href="{{ path('admin_user') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
</div>
{% endblock %}
