{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des commentaires</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Auteur</th>
                <th>Recette</th>
                <th>Date</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.user ? comment.user.username : 'Anonyme' }}</td>
                    <td>{{ comment.recipe ? comment.recipe.title : '' }}</td>
                    <td>{{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ comment.content }}</td>
                    <td class="d-flex gap-2 align-items-center">
                        <a href="{{ path('comment_show', {'id': comment.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form method="post" action="{{ path('comment_delete', {'id': comment.id}) }}" data-confirm-delete>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_comment_' ~ comment.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6" class="text-center">Aucun commentaire trouv√©.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
