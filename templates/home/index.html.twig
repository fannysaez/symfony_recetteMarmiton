{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page d'accueil !{% endblock %}

{% block body %}
<!-- Contenu principal -->
<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="jumbotron text-center mb-5">
        <h1 class="display-4">Bienvenue sur notre site !</h1>
        <hr class="my-4">
        <p class="lead">Découvrez nos recettes de qualité.</p>
    </div>
</div>

<!-- Section des recettes -->
<section>
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            {% for recipe in recipes %}
                <div class="col d-flex">
                    {% include "_partials/recipe-card.html.twig" with { 'recipe': recipe } %}
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p class="text-muted">Aucune recette disponible.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
