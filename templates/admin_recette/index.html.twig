{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des recettes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des recettes</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.id }}</td>
                    <td>{{ recipe.title }}</td>
                    <td>{{ recipe.user ? recipe.user.username : 'Anonyme' }}</td>
                    <td>{{ recipe.createdAt ? recipe.createdAt|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('recette_show', {'id': recipe.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('recette_edit', {'id': recipe.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form method="post" action="{{ path('recette_delete', {'id': recipe.id}) }}" style="display:inline-block" data-confirm-delete>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_recette_' ~ recipe.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="text-center">Aucune recette trouvée.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
