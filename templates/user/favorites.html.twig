{% extends 'base.html.twig' %}

{% block title %}Mes favoris{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Mes recettes favorites</h1>
    {% if app.user.favorites is empty %}
    <div class="alert alert-info">Vous n'avez pas encore de recettes en favori.</div>
    {% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for recipe in app.user.favorites %}
        <div class="col">
            {% include '_partials/recipe-card.html.twig' with { recipe: recipe } %}
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
{% endblock %}