{# Carte recette avec affichage des tags #}
<div class="card h-100 shadow-sm">
    {% if recipe.image %}
        <img src="{{ recipe.image }}" class="card-img-top" alt="{{ recipe.title }}">
    {% endif %}
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">{{ recipe.title }}</h5>
        {# Affichage des tags #}
        {% if recipe.tags|length > 0 %}
            <div class="mb-2">
                {% for tag in recipe.tags %}
                    <span class="badge bg-info text-dark me-1">{{ tag.name }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <p class="card-text text-success">Facile</p>
        <p class="card-text">{{ recipe.duration }} min | {{ recipe.peopleCount }} pers.</p>
        <a href="{{ path('recette_show', {'id': recipe.id}) }}" class="btn btn-info mt-auto">Voir la recette</a>
    </div>
</div>
